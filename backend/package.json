    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "multer": "1.4.5-lts.2",
    "typescript": "^5.3.3",
    "rimraf": "^5.0.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "1.4.13",
    "@types/node": "^20.11.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": "18.x"
